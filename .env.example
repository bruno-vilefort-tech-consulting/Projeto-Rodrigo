# ========================================
# CONFIGURAÇÃO GERAL
# ========================================

# URLs da aplicação
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ========================================
# FRONTEND (React)
# ========================================

# Backend URL para o frontend se comunicar
REACT_APP_BACKEND_URL=https://api.yourdomain.com

# Nome do sistema
REACT_APP_NAME_SYSTEM=ChatIA

# Nome da empresa (legacy)
REACT_APP_COMPANY_NAME=Your Company Name

# Telefone de suporte
REACT_APP_NUMBER_SUPPORT=+5511999999999

# Auto fechar tickets após X horas (9999 = desabilitado)
REACT_APP_HOURS_CLOSE_TICKETS_AUTO=9999

# Cores do tema
REACT_APP_PRIMARY_COLOR=#6B46C1
REACT_APP_PRIMARY_DARK=#4C1D95

# Facebook App ID (opcional)
REACT_APP_FACEBOOK_APP_ID=

# Requer gerenciamento de empresa (TRUE/FALSE)
REACT_APP_REQUIRE_BUSINESS_MANAGEMENT=FALSE

# ========================================
# BANCO DE DADOS (PostgreSQL)
# ========================================

DB_NAME=chatia
DB_USER=chatia
DB_PASS=your_strong_password_here
DB_HOST=postgres
DB_PORT=5432
DB_DIALECT=postgres

# Pool de conexões (opcional)
DB_POOL_MAX=100
DB_POOL_MIN=15
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=600000

# ========================================
# REDIS
# ========================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Configurações adicionais do Redis (opcional)
IO_REDIS_SERVER=redis
IO_REDIS_PORT=6379
IO_REDIS_PASSWORD=your_redis_password_here
REDIS_URI=
REDIS_URI_ACK=
REDIS_SECRET_KEY=MULTI100
REDIS_OPT_LIMITER_MAX=1
REDIS_OPT_LIMITER_DURATION=3000

# ========================================
# AUTENTICAÇÃO E SEGURANÇA
# ========================================

# JWT Secrets (gere com: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here

# Credenciais do Admin
ADMIN_USERNAME=admin@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_admin_password_here

# ========================================
# EMPRESA
# ========================================

COMPANY_NAME=Your Company Name
COMPANY_TOKEN=
CONTACT_PHONE=+5511999999999

# ========================================
# WHATSAPP
# ========================================

SESSION_SECRET=your_session_secret_here
VERIFY_TOKEN=
MASTER_KEY=

# ========================================
# OUTROS
# ========================================

# Ambiente
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Storage
STORAGE_TYPE=local

# Logs
LOG_LEVEL=info

# FFmpeg
FFMPEG_PATH=/usr/bin/ffmpeg

# ========================================
# INTEGRAÇÕES OPCIONAIS
# ========================================

# Sentry (monitoramento de erros)
SENTRY_DSN=

# Email/SMTP
MAIL_HOST=
MAIL_PORT=
MAIL_USER=
MAIL_PASS=
MAIL_FROM=
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_SECURE=

# Bull Queue
BULL_PASS=

# Facebook
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Gerencianet/Efí (pagamentos)
GERENCIANET_CLIENT_ID=
GERENCIANET_CLIENT_SECRET=
GERENCIANET_PIX_CERT=
GERENCIANET_SANDBOX=false

# Mercado Pago
MP_ACCESS_TOKEN=

# ========================================
# FEATURES FLAGS
# ========================================

FEATURE_COMPANY_DOCUMENT_OPTIONAL=false
FEATURE_CONTACTS_FIX=false
FEATURE_CONTACTS_NORMALIZE_E=false
FEATURE_CONTACTS_ONLY_AGENDA_FILTER=false
FEATURE_CONTACTS_SOURCE_FIELD=false

# Flow Menu
FLOW_MENU_COOLDOWN_SEC=30

# Demo/Trial
DEMO=false
APP_TRIALEXPIRATION=

# Environment Token
ENV_TOKEN=
